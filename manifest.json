{
  "manifest_version": 2,
  "name": "Whatstak",
  "version": "0.0.1",
  "description": "Track user's online status on WhatsApp.",
  "icons": {
    "48": "icons/whatstak-48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.whatsapp.com/*"
      ],
      "js": [
        "app.js"
      ]
    }
  ],
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/whatstak-48.png"
    },
    "default_title": "Whatstak",
    "default_popup": "index.html"
  }
}